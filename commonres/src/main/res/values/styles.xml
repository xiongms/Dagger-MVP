<resources>
    <!-- Base application theme. -->
    <style name="CQBAppTheme" parent="@style/QMUI.Compat">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorPrimary">@color/text_black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/button</item>
        <item name="editTextStyle">@style/editText</item>
        <item name="dialogTheme">@style/CustomDialog</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textViewStyle">@style/textview_style</item>
        <item name="android:listViewStyle">@style/listView</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:editTextStyle">@style/editText</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Self" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/text_black</item>
    </style>

    <style name="home_tab_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/home_tab_button_text_colors</item>
        <item name="android:textSize">11sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="textview_style">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="listView" parent="android:Widget.Holo.ListView">
        <item name="android:divider">@color/line_color</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:listSelector">@drawable/list_selector_background</item>
    </style>

    <style name="button" parent="android:Widget.Holo.Light.Button">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/button_bg_solid_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

    <style name="DateTimePickerDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="button_red_stroke" parent="android:Widget.Holo.Light.Button">
        <item name="android:padding">5dp</item>
